@{
    ViewBag.Title = "My Profile";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CommunityHub Events! - My Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="~/Content/client-home.css" rel="stylesheet">
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">
                <i class="bi bi-calendar-event"></i> CommunityHub Events!
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-lg-center gap-lg-1">

                    <!-- Profile Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link profile-link dropdown-toggle d-flex align-items-center gap-2"
                           href="#" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="bi bi-person-circle"></div>
                            Profile
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end custom-dropdown">
                            <li>
                                <a class="dropdown-item" href="#">
                                    <i class="bi bi-person me-2"></i>My Profile
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Home", "Client")">
                                    <i class="bi bi-calendar-event me-2"></i>Dashboard
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">
                                    <i class="bi bi-gear me-2"></i>Settings
                                </a>
                            </li>
                        </ul>
                    </li>
                    <!-- Logout -->
                    <li class="nav-item">
                        <a class="nav-link logout-link d-flex align-items-center gap-1"
                           href="@Url.Action("Logout","Client")" id="logoutBtn">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Profile Page -->
    <section class="profile-page">
        <div class="container" style="position:relative; z-index:1;">
            <div class="row g-4">

                <!-- LEFT: Identity Card -->
                <div class="col-lg-3">
                    <div class="profile-card identity-card fade-in">

                        <div class="avatar-wrap">
                            <div class="avatar-initials" id="avatarInitials">
                                @(ViewBag.Username != null ? ViewBag.Username.ToString().Substring(0, 1).ToUpper() : "U")
                            </div>
                            <span class="online-badge"></span>
                        </div>

                        <h5>
                            @ViewBag.Username
                            <i class="bi bi-patch-check-fill" style="color:var(--primary-color); font-size:0.9rem;"></i>
                        </h5>
                        <p class="handle">@@@ViewBag.Username</p>

                        <button class="btn btn-preview" data-bs-toggle="modal" data-bs-target="#editModal">
                            <i class="bi bi-eye me-1"></i> Preview Profile
                        </button>

                        <ul class="meta-list">
                            <li>
                                <span class="label"><i class="bi bi-geo-alt"></i> Location</span>
                                <span class="value" id="displayLocation">@(ViewBag.Location ?? "Not set")</span>
                            </li>
                            <li>
                                <span class="label"><i class="bi bi-calendar3"></i> Member since</span>
                                <span class="value">@DateTime.Now.ToString("MMM yyyy")</span>
                            </li>
                            <li>
                                <span class="label">
                                    <i class="bi bi-circle-fill" style="color:#22c55e; font-size:0.5rem;"></i> Status
                                </span>
                                <span class="value" style="color:#22c55e;">Available</span>
                            </li>
                        </ul>

                        <button class="btn btn-edit" data-bs-toggle="modal" data-bs-target="#editModal">
                            <i class="bi bi-pencil me-1"></i> Edit Profile
                        </button>

                    </div>
                </div>

                <!-- RIGHT: Dashboard Content -->
                <div class="col-lg-9 d-flex flex-column gap-4">

                    <!-- Stats -->
                    <div class="row g-3 fade-in">
                        <div class="col-6 col-md-3">
                            <div class="stat-box">
                                <div class="stat-number">0</div>
                                <div class="stat-label">Events Joined</div>
                            </div>
                        </div>
                        <div class="col-6 col-md-3">
                            <div class="stat-box">
                                <div class="stat-number">0</div>
                                <div class="stat-label">Events Hosted</div>
                            </div>
                        </div>
                        <div class="col-6 col-md-3">
                            <div class="stat-box">
                                <div class="stat-number">0</div>
                                <div class="stat-label">Following</div>
                            </div>
                        </div>
                        <div class="col-6 col-md-3">
                            <div class="stat-box">
                                <div class="stat-number">0</div>
                                <div class="stat-label">Followers</div>
                            </div>
                        </div>
                    </div>

                    <!-- About / Bio -->
                    <div class="profile-card fade-in">
                        <p class="section-title"><i class="bi bi-person-lines-fill me-1"></i> About Me</p>
                        <p class="bio-text" id="displayBio">
                            @(ViewBag.Bio ?? "No bio yet — tell the community a little about yourself!")
                        </p>
                    </div>

                    <!-- My Events -->
                    <div class="profile-card fade-in">
                        <p class="section-title"><i class="bi bi-calendar2-event me-1"></i> My Events</p>
                        <div class="events-grid">

                            @*
                                Wire up your real events loop here:
                                @foreach (var ev in Model.Events) {
                                    <div class="event-thumb">
                                        <div class="event-thumb-img">
                                            <i class="bi bi-calendar-event"></i>
                                        </div>
                                        <div class="event-thumb-body">
                                            <p>@ev.Title</p>
                                            <span>@ev.Date.ToString("MMM dd, yyyy")</span>
                                        </div>
                                    </div>
                                }
                            *@

                            <!-- Empty state placeholder -->
                            <div class="event-thumb d-flex flex-column align-items-center justify-content-center text-center p-3"
                                 style="min-height:140px;">
                                <i class="bi bi-calendar2 mb-2" style="font-size:1.8rem; color:rgba(99,102,241,0.35);"></i>
                                <p style="font-size:0.8rem; color:var(--text-secondary); margin:0;">No events yet</p>
                            </div>

                            <!-- Create new event -->
                            <a href="@Url.Action("MyEvent", "Client")" class="event-create">
                                <div class="plus-icon"><i class="bi bi-plus-lg"></i></div>
                                <span>Create new Event</span>
                            </a>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

    <!-- Edit Profile Modal -->
    <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editModalLabel">
                        <i class="bi bi-pencil-square me-2" style="color:var(--primary-color);"></i>Edit Profile
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="editProfileForm">
                        <div class="mb-3">
                            <label class="form-label">Display Name</label>
                            <input type="text" class="form-control" id="inputName"
                                   placeholder="Your name" value="@ViewBag.Username">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Location</label>
                            <input type="text" class="form-control" id="inputLocation"
                                   placeholder="e.g. New York, USA" value="@ViewBag.Location">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Bio</label>
                            <textarea class="form-control" id="inputBio" rows="3"
                                      placeholder="Tell the community about yourself...">@ViewBag.Bio</textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-cancel" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-save" id="saveProfileBtn">
                        <i class="bi bi-check2 me-1"></i> Save Changes
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/client-home.js"></script>
</body>
</html>
