
@{
    ViewBag.Title = "ForgotPassword";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CommunityHub Events! - Forgot Password</title>
    <link rel="stylesheet" href="~/Content/auth-styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body>
    <div class="auth-container">
        <div class="auth-card">

            <!-- Brand Logo -->
            <div class="brand-logo">
                <i class="bi bi-calendar-event"></i>
                <h2>CommunityHub Events!</h2>
                <p>Recover your account access</p>
            </div>

            <!-- Page Title -->
            <div class="page-title">
                <h3>Forgot Password</h3>
                <p>Enter your username to reset your password</p>
            </div>

            <!-- Alert Message -->
            <div class="alert-message" id="alertMessage"></div>

            <!-- Forgot Password Form -->
            <form method="post" action="@Url.Action("ForgotPassword","Account")">

                <div class="form-group">
                    <label><i class="bi bi-person-badge"></i> Username</label>
                    <div class="input-wrapper">
                        <i class="bi bi-person-badge input-icon"></i>
                        <input type="text"
                               class="form-control"
                               name="username"
                               placeholder="Enter your username"
                               required>
                    </div>
                </div>

                <button type="submit" class="btn-primary-custom">
                    <i class="bi bi-send me-2"></i> Send Reset Request
                </button>

                <div class="form-footer mt-3">
                    Remember your password?
                    <a href="@Url.Action("Login", "Account")" class="form-link">Login</a>
                </div>
            </form>

            <!-- Back to Home -->
            <div class="back-home">
                <a href="@Url.Action("LandingPage", "Home")">
                    <i class="bi bi-arrow-left"></i> Back to Home
                </a>
            </div>

        </div>
    </div>
</body>
</html>

